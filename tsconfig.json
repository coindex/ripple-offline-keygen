{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "sourceMap": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", "!node_modules/@types"]
}
